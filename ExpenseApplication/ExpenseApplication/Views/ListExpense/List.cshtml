@model IEnumerable<ExpenseApplication.Models.AddExpense>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List Expense</h2>
<div class="bs-component live-less-editor-hovercontainer" data-relatedvars="state-success-bg,state-info-bg,state-warning-bg,state-danger-bg,table-bg,table-cell-padding,table-border-color,table-condensed-cell-padding,table-bg-accent,table-bg-hover,table-bg-active">
    <table class="table table-striped table-hover">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.expenseName )
            </th>
            <th>
                @Html.DisplayNameFor(model => model.expensePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.expenseCurrency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.expenseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.expenseAim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.expenseApproval)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.approvalInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.userName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.expenseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.expensePrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.expenseCurrency)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.expenseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.expenseAim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.expenseApproval)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.approvalInfo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.userName)
                </td>
                <td>
                    @if (item.expenseApproval == "Reddedildi")
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.expenseId })
                    }
                    @Html.ActionLink("Delete", "Delete", new { id = item.expenseId })
                </td>
            </tr>
        }
    </table>
</div>

<h2>Ödeme Bekleyen Toplam Masraf: @ViewBag.Sum</h2>
