@model IEnumerable<ExpenseApplication.Models.AddExpense>

@{
    ViewBag.Title = "AccountantList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AccountantList</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.expensePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.expenseCurrency)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.expensePrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.expenseCurrency)
        </td>
        <td>
            @Html.ActionLink("Payment", "Edit", new { id = item.expenseId })
        </td>
    </tr>
}
</table>
