
@model ExpenseApplication.Models.AddExpense

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Insert</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

    <fieldset>
        <legend>Add Expense</legend>
        <div class="well bs-component live-less-editor-hovercontainer" data-relatedvars="legend-color,legend-border-color,input-color,input-height-base,input-bg,input-border,
             input-border-radius,input-border-focus,input-color-placeholder,input-bg-disabled,input-height-small,input-height-large,state-success-text,state-success-bg,state-warning-text,
             state-warning-bg,state-danger-text,state-danger-bg,input-group-addon-bg,input-group-addon-border-color,input-border-radius-large,input-border-radius-small">
            <form class="form-horizontal">
                <fieldset>
                    <div class="form-group">
                        <label for="textArea" class="col-lg-2 control-label" style="font-size:large">Expense Name</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(model => model.expenseName, new { @Style = "width:300px; height:50px", @Placeholder = "Name", @Type = "Text" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="textArea" class="col-lg-2 control-label" style="font-size:large">Expense Price</label>
                        <div class="col-lg-10">
                            @*<input type="number" class="form-control" id="inputExpensePrice" placeholder="Price">*@
                            @Html.TextBoxFor(model => model.expensePrice, new { @Style = "width:300px; height:50px", @Placeholder = "Price", @Type = "Number", @Max = 1000 })
                            @Html.DropDownListFor(model => model.expenseCurrency, (SelectList)ViewBag.Size, new { @Style = "width:100px; height:50px"})
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="textArea" class="col-lg-2 control-label" style="font-size:large">Expense Date</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(model => model.expenseDate, new { @Style = "width:300px; height:50px", @Type = "Date" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="textArea" class="col-lg-2 control-label" style="font-size:large">Expense Aim</label>
                        <div class="col-lg-10">
                            @*@Html.TextBoxFor(model => model.expenseAim, new { @Style = "width:300px; height:50px", @Placeholder = "Aim", @Type = "Text")*@
                            @Html.TextAreaFor(model => model.expenseAim, new { @Style = "width:300px; height:50px", @Placeholder = "Aim", @Type = "Text" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            @*<button class="btn btn-default">Cancel</button>*@
                            <button type="submit" class="btn btn-primary">ADD</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </fieldset>
    }
</body>
</html>
